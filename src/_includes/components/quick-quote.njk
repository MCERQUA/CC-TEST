#}

<div class="quick-quote">
  <h3>Get a Free Quote</h3>
  <p>Fast, no-obligation estimate for your insulation project</p>
  
  <form class="quote-form" action="#" method="POST" data-netlify="true" netlify-honeypot="bot-field" name="quick-quote">
    <input type="hidden" name="form-name" value="quick-quote">
    <p class="hidden">
      <label>Don't fill this out if you're human: <input name="bot-field" /></label>
    </p>
    
    <div class="form-group">
      <input type="text" name="name" placeholder="Your Name" required>
    </div>
    
    <div class="form-group">
      <input type="tel" name="phone" placeholder="Phone Number" required>
    </div>
    
    <div class="form-group">
      <input type="email" name="email" placeholder="Email Address" required>
    </div>
    
    <div class="form-group">
      <select name="service" required>
        <option value="">Select Service</option>
        <option value="spray-foam">Spray Foam Insulation</option>
        <option value="blown-in">Blown-In Insulation</option>
        <option value="attic">Attic Insulation</option>
        <option value="wall">Wall Insulation</option>
        <option value="commercial">Commercial Services</option>
        <option value="other">Other</option>
      </select>
    </div>
    
    <div class="form-group">
      <textarea name="message" placeholder="Brief description of your project" rows="3"></textarea>
    </div>
    
    <button type="submit" class="submit-btn">Get Free Quote</button>
  </form>
  
  <div class="quote-footer">
    <p>Or call us directly:</p>
    <a href="tel:623-241-1939" class="phone-link">623-241-1939</a>
  </div>
</div>

