{# Air Duct Cleaning Section - Updated with Reduced Glow & Lighter Overlay #}
{% set sectionTitle = sectionTitle or "Now Offering Professional Air Duct Cleaning!" %}
{% set sectionSubtitle = sectionSubtitle or "Keep your home's air fresh, reduce allergens, and boost HVAC efficiency. Schedule your duct cleaning today." %}
{% set ctaText = ctaText or "Book Now!" %}
{% set ctaUrl = ctaUrl or "/contact" %}
{% set showSection = showSection if showSection is defined else true %}

{% if showSection %}
<section class="air-duct-cleaning-hero" style="background-image: url('/Images/vent-cleaning_arizona.webp');">
  <div class="duct-cleaning-overlay"></div>
  <div class="container">
    <div class="duct-cleaning-content">
      <div class="duct-cleaning-text">
        <h2 class="section-title glow-text">{{ sectionTitle }}</h2>
        <p class="section-subtitle">{{ sectionSubtitle }}</p>
        <a href="{{ ctaUrl }}" class="btn-hero-primary">
          {{ ctaText }} <span class="btn-arrow">â†’</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Air Duct Cleaning Section - Background Image Style with Lighter Overlay */
  .air-duct-cleaning-hero {
    position: relative;
    min-height: 400px;
    display: flex;
    align-items: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: scroll;
    margin: 2rem 0;
    border-radius: 15px;
    overflow: hidden;
    border: 1px solid rgba(0, 255, 255, 0.1);
  }

  /* Desktop background position - center to show full scene */
  .air-duct-cleaning-hero {
    background-position: center center;
  }

  /* Lighter overlay to show more of the background image */
  .duct-cleaning-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(10, 26, 26, 0.4) 0%, 
      rgba(15, 36, 36, 0.35) 50%,
      rgba(26, 48, 48, 0.45) 100%);
    z-index: 1;
  }

  .duct-cleaning-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .duct-cleaning-text {
    max-width: 600px;
    background: rgba(10, 26, 26, 0.3);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(0, 255, 255, 0.15);
    border-radius: 15px;
    padding: 2.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }

  .duct-cleaning-text .section-title {
    font-size: 2.25rem;
    color: var(--accent-primary);
    font-family: var(--font-heading);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-shadow: 0 0 3px rgba(0, 255, 255, 0.2);
  }

  .duct-cleaning-text .section-subtitle {
    font-size: 1.2rem;
    color: var(--gray-100);
    margin-bottom: 2rem;
    line-height: 1.6;
    font-weight: 400;
  }

  /* Button matching hero section style */
  .duct-cleaning-text .btn-hero-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--gradient-accent);
    color: var(--primary-dark);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all var(--transition-medium);
    box-shadow: 0 4px 15px rgba(0, 255, 255, 0.25);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .duct-cleaning-text .btn-hero-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255, 255, 255, 0.2), 
      transparent);
    transition: left 0.6s ease;
  }

  .duct-cleaning-text .btn-hero-primary:hover::before {
    left: 100%;
  }

  .duct-cleaning-text .btn-hero-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 255, 255, 0.35);
    border-color: var(--accent-primary);
  }

  .duct-cleaning-text .btn-arrow {
    font-size: 1.2rem;
    transition: transform var(--transition-medium);
  }

  .duct-cleaning-text .btn-hero-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  /* Mobile Responsive - Left aligned background with more padding */
  @media (max-width: 768px) {
    .air-duct-cleaning-hero {
      min-height: 450px; /* Increased height for more padding */
      background-position: left center; /* Keep character visible on mobile */
      margin: 1.5rem 0;
    }

    .duct-cleaning-content {
      padding: 4rem 1rem; /* Increased top/bottom padding */
    }

    .duct-cleaning-text {
      max-width: 100%;
      padding: 2rem 1.5rem;
      background: rgba(10, 26, 26, 0.25); /* Even more transparent on mobile */
    }

    .duct-cleaning-text .section-title {
      font-size: 1.875rem;
    }

    .duct-cleaning-text .section-subtitle {
      font-size: 1.1rem;
    }

    .duct-cleaning-text .btn-hero-primary {
      padding: 0.875rem 1.75rem;
      font-size: 0.95rem;
    }
  }

  /* Small Mobile - Even more padding */
  @media (max-width: 480px) {
    .air-duct-cleaning-hero {
      min-height: 420px; /* Adequate height for small screens */
    }

    .duct-cleaning-content {
      padding: 3.5rem 1rem; /* Good padding for small screens */
    }

    .duct-cleaning-text {
      padding: 1.5rem 1rem;
    }

    .duct-cleaning-text .section-title {
      font-size: 1.625rem;
    }

    .duct-cleaning-text .section-subtitle {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .duct-cleaning-text .btn-hero-primary {
      padding: 0.75rem 1.5rem;
      font-size: 0.9rem;
    }
  }

  /* Reduced glow effect for this section */
  .air-duct-cleaning-hero .glow-text {
    animation: subtle-pulse-glow 4s ease-in-out infinite;
  }

  @keyframes subtle-pulse-glow {
    0%, 100% {
      text-shadow: 
        0 0 2px var(--accent-primary),
        0 0 4px var(--accent-primary),
        0 0 6px rgba(0, 255, 255, 0.3);
    }
    50% {
      text-shadow: 
        0 0 3px var(--accent-primary),
        0 0 6px var(--accent-primary),
        0 0 10px rgba(0, 255, 255, 0.4);
    }
  }
</style>
{% endif %}